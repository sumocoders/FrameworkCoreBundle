<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />

  <meta charset="UTF-8" />
  <title>
    {% block title %}
      {{ fallbacks.get('site_title') }}
    {% endblock %}
  </title>

  {% block meta %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="author" content="SumoCoders">
  {% endblock %}

  <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  {% block stylesheets %}
    {# 'app' must match the first argument to addEntry() in webpack.config.js #}
    {{ encore_entry_link_tags('app') }}

      <!-- Renders a link tag (if your module requires any CSS)
           <link rel="stylesheet" href="/build/app.css"> -->
    {% endblock %}

    {# Fontawesome #}
    {% block css_icons %}
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/solid.css" integrity="sha384-ioUrHig76ITq4aEJ67dHzTvqjsAP/7IzgwE7lgJcg2r7BRNGYSK0LwSmROzYtgzs" crossorigin="anonymous">
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/fontawesome.css" integrity="sha384-sri+NftO+0hcisDKgr287Y/1LVnInHJ1l+XC7+FOabmTTIK0HnE2ID+xxvJ21c5J" crossorigin="anonymous">
  {% endblock %}

  {% block head_javascripts %}
    <script type="text/javascript">
      var jsData = {{ jsData|raw }};
    </script>
  {% endblock %}

  {% block icons %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
    <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}">
    <link rel="image_src" href="{{ asset('image_src.png') }}" />
  {% endblock %}
</head>

<body class="body-base">
<!--[if lt IE 8 ]>
<div id="ie6" class="alert alert-block" role="alert">
  <a href="#" class="close icon-close" data-dismiss="alert" title="{{ 'dialogs.close'|trans|capitalize }}"><span class="sr-only" aria-hidden="true">x</span></a>
  {{ 'core.warnings.oldBrowser'|trans|raw }}
</div>
<![endif]-->

<div id="main-wrapper" class="main-wrapper">
  <div id="main-menu" class="main-menu" role="navigation">
    {{ include('@SumoCodersFrameworkCore/navigation.html.twig') }}
  </div>
  <div id="content-wrapper">
    <div class="main-header">
      <div class="sub-nav row">
        <div class="col col-alternative">
          <nav aria-label="breadcrumb">
            {{ knp_menu_render('breadcrumb', {'template': '@SumoCodersFrameworkCore/BreadCrumb/breadCrumb.html.twig'}) }}
          </nav>
        </div>
        <div class="ml-auto">
          <div class="user-nav d-flex h-100">
            {% if app.user is not null %}
              <div class="btn-group dropdown">
                <button class="btn btn-default dropdown-toggle d-flex align-items-center" data-toggle="dropdown" aria-expanded="false">
                  {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                    <i class="fas fa-exchange-alt"></i>
                  {% else %}
                    <i class="fas fa-user-circle mr-md-1"></i>
                  {% endif %}
                  <span class="d-none d-md-block mr-md-1">
                    {% if msgphp_user is defined %}
                      {{ msgphp_user.current.name }}
                    {% else %}
                      {{ app.user.username }}
                    {% endif %}
                  </span>
                  <span class="fas fa-chevron-right fa-w-16 d-none d-md-block"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  {% if msgphp_user is defined %}
                    {% block userNavigation %}
                      <li><a href="{{ path('profile', { 'user': msgphp_user.current.id }) }}">{{ 'account'|trans|capitalize }}</a></li>
                    {% endblock %}
                  {% endif %}
                  {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                    <li><a href="{{ path('index', {'_switch_user': '_exit'}) }}">{{ 'user.actions.switchBack'|trans|capitalize }}</a></li>
                  {% endif %}
                  <li><a href="{{ path('logout') }}">{{ 'user.actions.logout'|trans|capitalize }}</a></li>
                </ul>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    <div class="header-title">
      {{ include('@SumoCodersFrameworkCore/notifications.html.twig') }}
      <div class="header-title-bar">
        {% block header_title %}

        {% endblock %}
      </div>
    </div>
    {% if block('header_navigation') is defined %}
      <div class="actions clearfix">
        <div class="action-buttons">
          {{ block('header_navigation') }}
        </div>
      </div>
    {% endif %}
    <section id="main" class="main-content" role="main">
      <div class="container-fluid">
        {% block main %}

        {% endblock %}
      </div>
    </section>
  </div>
  <footer class="footer">
    {% block footer %}
      <div class="container-fluid">
        <div class="row hidden-md hidden-lg">
            <a href="#main-wrapper" class="pull-right back-to-top"><i class="fas fa-chevron-circle-up"></i> {{ 'core.interface.backToTop'|trans|capitalize }}</a>
        </div>
      </div>
    {% endblock %}
  </footer>
</div>

{{ include('@SumoCodersFrameworkCore/dialogs.html.twig') }}

{% block javascripts %}
  {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
