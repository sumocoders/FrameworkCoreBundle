{% apply inky_to_html|inline_css(content('/../var/sass/mail.output.css')) %}
  <spacer size="16"></spacer>
  <container>
    <spacer size="16"></spacer>
    <row>
      <columns>
        <center>
          {% block logo %}
            <img
              src="{{ absolute_url(asset('images/logo-application-mail.gif')) }}"
              alt="{{ fallbacks.get('site_title') }}"
            >
          {% endblock %}
        </center>
      </columns>
    </row>
    <spacer size="16"></spacer>
    <row>
      <columns>
        {% block content %}
          {{ content|raw }}
        {% endblock %}
      </columns>
    </row>
  </container>
  <spacer size="16"></spacer>
{% endapply %}
