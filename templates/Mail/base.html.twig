{% apply inky_to_html|inline_css(content(asset('scss/mail.css'))) %}
    <spacer size="16"></spacer>
    <container>
        <spacer size="16"></spacer>
        <row>
            <columns>
                <center>
                    {% block logo %}
                        <img src="{{ absolute_url(asset('images/logo-application-mail.gif')) }}" alt="{{ fallbacks.get('site_title') }}">
                    {% endblock %}
                </center>
            </columns>
        </row>
        {% block content %}
            {{ content|raw }}
        {% endblock %}
    </container>
{% endapply %}
